{
    "extends": "eslint:recommended",
    "parserOptions": { "ecmaVersion": 2015 },
    "rules": {
        "no-console": "off",
        "comma-spacing": "error",
        "indent": [
            2,
            4,
            {
                "FunctionExpression": { "parameters": "first" },
                "CallExpression": { "arguments": "first" }
            }
        ],
        "space-infix-ops": "error",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "key-spacing": [
            2,
            {"afterColon": true}
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "eqeqeq": [
            2,
            "smart"
        ],
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ],
        "no-trailing-spaces": "error",
        "curly": "error",
        "space-before-blocks": "error",
        "eol-last": "error"
    },
    "env": {
        "es6": true,
        "browser": true
    }
}
